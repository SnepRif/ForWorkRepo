
@{
    ViewBag.Title = "Buy";
}

    <div>
        <h3>Оформление покупки</h3>
        <form method="post">
            <input type="hidden" value="@ViewBag.GameId" name="Id" />
            <table>
                <tr>
                    <td><p>Введите имя</p></td>
                    <td><input type="text" name="Person" /></td>
                </tr>
                <tr>
                    <td><p>Введите адрес </p></td>
                    <td>
                        <input type="text" name="Address" />

                    </td>
                </tr>
                <tr><td><input type="submit" value="Отправить" /></td></tr>
            </table>
        </form>
    </div>