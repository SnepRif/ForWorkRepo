@model  FootballClubProj.Models.PlayerListViewModel

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form method="get">
    <div class="form-inline">
        <label class="control-label">Команда: </label>
        @Html.DropDownList("team", Model.Teams as SelectList, htmlAttributes: new { @class = "form-control" })

        <label class="control-label">Позиция на поле: </label>
        @Html.DropDownList("position", Model.Positions as SelectList, htmlAttributes: new { @class = "form-control" })

        <input type="submit" value="Фильтр" class="btn btn-default" />

    </div>
</form>

<table>
    <tr>
        <th>Имя игрока</th>
        <th>Возраст</th>
        <th>Позиция</th>
        <th>Команда</th>
    </tr>

    @foreach (var p in Model.Players)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => p.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => p.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => p.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => p.Team.Name)
            </td>

        </tr>
    }
</table>
